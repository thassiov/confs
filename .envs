# JAVA/ANDROID Stuff
# watch out for the 8 (some problems with xml in other versions)
export JAVA_HOME=/usr/lib/jvm/java-8-openjdk
# Assuming android-sdk was installed using yay
export ANDROID_HOME=/opt/android-sdk
export ANDROID_TOOLS=/opt/android-sdk/tools
export ANDROID_PLATFORM_TOOLS=/opt/android-sdk/platform-tools

# My Scripts
export MY_SCRIPTS=~/bin

# BROWSER
export BROWSER=brave
# export BROWSER=firefox

# GO PATH
export GO_PATH=/usr/bin/go

export NPM_LOCAL=~/.local/bin

export PATH=$PATH:$GO_PATH:$NPM_LOCAL:$MY_SCRIPTS

export FZF_DEFAULT_COMMAND='ag --ignore node_modules -g ""'

export KUBECONFIG=~/.kube/config

# export PROMPT='$(kube_ps1)'$PROMPT
# start the prompt with the kubernetes indicator turned off
# kubeoff
